---
// index.astro
import Layout from '../layouts/Layout.astro';
import Footer from "../components/Footer.astro"
import HeaderStore from "../components/HeaderStore.astro";
import MenuD from '../components/MenuD.astro';
import Menu from '../components/Menu.astro';
import "../styles/style.css";
import Swiper from '../components/Swiper.astro';
import TechSlider from '../components/TechSlider.astro';
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8"> <!-- Aquí se configura UTF-8 -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Store</title>
</head>
<body>
        <MenuD class="menu-header"/>
        <Menu/>
    
    <HeaderStore/>
    <Layout headerClass="Store-header" />   
    
    <section class="hero">
        <div class="container-principal">
            <div class="hero-content">
                <p class="hero-subtitle">Repuestos, calidad garantizada</p>
                <h1 class="hero-title">Kits de Embrague y Componentes de Transmisión</h1>
                <a href="/filtro" class="shop-now-btn">Compra Ahora</a>
            </div>
            <div class="swiper swiper-initialized swiper-horizontal swiper-backface-hidden">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <img src="/images/EMBRAGUE 1.2.jpg" alt="Lamp collection 1" class="hero-image">
                    </div>
                    <div class="swiper-slide">
                        <img src="/images/EMBRAGUEs.jpeg" alt="Lamp collection 2" class="hero-image">
                    </div>
                   
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </section>

    <section class="collections">
        <h2 class="section-title">Categorias</h2>
        <div class="collections-grid">
            <a href="/filtro" class="collection-card">
                <img src="/images/kit.webp" alt="Featured Products" />
                <h3>Kit de Embrague</h3>
               
            </a>
            <a href="/filtro" class="collection-card">
                <img src="/images/balinera.jpg" alt="Luminaire Essentials" />
                <h3>Balineras</h3>
                
            </a>
            <a href="/filtro" class="collection-card">
                <img src="/images/balin.webp" alt="Luxe Luminaires" />
                <h3>Balibomba</h3>
                
            </a>
        </div>
    </section>
    
    <section class="featured-products">
        <div class="container-products">
            
            <div class="button-container">
                <a href="/filtro" class="view-all-btn">+ Ver Todos los Productos</a> <!-- Enlace a la nueva página -->
            </div>
        </div>
    </section>
   <TechSlider/>
   <Swiper/>
    <Footer/>
    </Layout>

    
</body>
</html>
